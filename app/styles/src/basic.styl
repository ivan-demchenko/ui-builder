*
  box-sizing border-box

html, body
  width 100%
  height 100%
  margin 0
  padding 0
  font-family Arial, sans-serif
  font-size 100%

input[type="text"]
  padding .5rem
  border solid 1px #ccc

.uib-v-div
  width 1px
  border-right 1px solid rgba(255,255,255,.4)

.element-to-drop-to
  background hoverElementBackground

.element-drag-from
  background hoverElementBackground

.scrollable
  overflow-y auto

.header
  width 100%
  background headerBackground
  color headerTextColor
  box-shadow 0 2px 3px rgba(0,0,0,.4)
  z-index 2
  display flex
  flex-shrink 0

input[type='text'], textarea
  margin 0
  padding 0
  border solid 1px #B3E5FC
  box-sizing border-box
  width 100%
  padding .5rem
  font-size 1rem
  background #E1F5FE

.unselectable
  -webkit-user-drag element
  -webkit-user-select none
  -moz-user-select none
  user-select none

  &:before
    position absolute
    top 0
    left 0
    right 0
    left 0
    background rgba(0,0,0,.8)
