body
  @extend .flex-col

.uib-app-logo
  @extend .unselectable
  padding 1rem
  text-transform uppercase

.uib-app-wrapper
  @extend .flex
  @extend .flex-prior
  height 100%

.uib-app-main
  background minorBackground
  width 100%
  position relative

.uib-app-aside
  @extend .scrollable
  @extend .flex-col
  background minorBackground
  max-width sideBarSize
  min-width sideBarSize

  ul
    padding 0
    margin 0
    font-size .85rem
    @extend .flex-prior

    li
      @extend .unselectable
      list-style none

      ul
        padding 0 0 0 1rem
