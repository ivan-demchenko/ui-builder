.uib-modal
  @extend .scrollable
  background modalBackground
  position absolute
  display flex
  flex-direction column
  flex-shrink 0
  max-height 60%
  top 30%
  width 60%
  left 50%
  transform translateX(-50%)
  box-shadow 0 0 10px rgba(0, 0, 0, .7)
  z-index 1

  &__header
    @extend .header

    &__label
      padding 1rem
      flex-grow 1

    &__ctrls
      flex-shrink 0

      .uib-btn
        padding 1rem
        display inline-block
        color #fff
        transition background .1s
        &:hover
          background rgba(255, 255, 255, .1)

  &__content
    @extend .scrollable
    display block
    padding modalPadding
