.uib-dom-tree__item
  margin .4rem 0 .4rem .4rem

  &--hovered
    box-shadow 0px 2px 7px #aaa

    & > .uib-dom-tree__item__placeholder
      height 20px
      padding .3rem

  &__label
    margin-left .4rem

  &__placeholder
    @extend .no-overflow, .unselectable, .animated
    background activeValueColor
    opacity .3
    color #fff
    font-size .6rem
    text-transform uppercase
    padding 0
    height 0
    line-height 1

    &--hovered
      opacity 1

    &:before
      content attr(data-label)
