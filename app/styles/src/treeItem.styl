.uib-tree-item
  display flex
  padding .4rem
  transition .3s background
  border-bottom dotted 1px #ccc
  border-left dotted 1px #ccc
  overflow hidden

  &.drag-from
    @extend .element-to-drop-to
    box-shadow 0 0 4px rgba(0, 0, 0, .2)

  &.drop-to
    background dragFromBackground

  i
    color treeMinor

  &__label
    flex-grow 1

  &__aside
      display flex
      flex-shrink 0

      .uib-btn
        padding .1rem

.uib-elem-tag-name
  color #424242
  flex-shrink 0

.uib-elem-identifier
  color #9E9E9E
