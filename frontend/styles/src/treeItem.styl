.uib-tree__item
  @extend .flex-col, .no-overflow, .unselectable
  list-style none
  padding basicUnit 0 basicUnit basicUnit
  min-height 1.7rem
  justify-content center
  transition .3s background

  &[draggable="true"]
    font-weight bold

  i
    color treeMinor

  &__label
    @extend .flex-prior

  &__aside
    @extend .flex, .no-shrink

    .uib-btn
      padding .1rem

.placeholder--child
  margin-left basicUnit

.uib-elem-tag-name
  @extend .no-shrink

.uib-elem-identifier
  color treeMinor
